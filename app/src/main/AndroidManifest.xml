<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="com.adhityabagasmiwa.learn_database_sqlite">

    <permission android:name="com.adhityabagasmiwa.learn_database_sqlite.READ_DATABASE" android:protectionLevel="normal"/>
    <permission android:name="com.adhityabagasmiwa.learn_database_sqlite.WRITE_DATABASE" android:protectionLevel="normal"/>

    <application
        android:allowBackup="true"
        android:icon="@mipmap/ic_launcher"
        android:label="@string/app_name"
        android:roundIcon="@mipmap/ic_launcher_round"
        android:supportsRtl="true"
        android:theme="@style/Theme.LearnDatabaseSQLite">
        <provider
            android:name=".data.provider.NoteProvider"
            android:authorities="com.adhityabagasmiwa.learn_database_sqlite"
            android:enabled="true"
            android:exported="true"
            android:readPermission="com.adhityabagasmiwa.learn_database_sqlite.READ_DATABASE"
            android:writePermission="com.adhityabagasmiwa.learn_database_sqlite.WRITE_DATABASE">
        </provider>
        <activity android:name=".ui.NoteAddUpdateActivity" />
        <activity android:name=".ui.MainActivity">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
    </application>

</manifest>